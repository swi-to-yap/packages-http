PACKAGE=http
include ../Makefile.defs

HTTPDIR=$(PLLIBDIR)/http
EXDIR=$(PKGEXDIR)/http

include $(srcdir)/common.mk

STREAMOBJ=	http_stream.o
JSONOBJ=	json.o
SOLIBS=		http_stream.@SO@ json.@SO@

all:		$(SOLIBS)


http_stream.@SO@:	$(STREAMOBJ)
		$(LD) $(LDSOFLAGS) -o $@ $(STREAMOBJ) $(LIBS)
json.@SO@:	$(JSONOBJ)
		$(LD) $(LDSOFLAGS) -o $@ $(JSONOBJ) $(LIBS)

http_stream.o:	$(addprefix $(srcdir)/, http_error.c http_chunked.c cgi_stream.c stream_range.c)

install:	$(SOLIBS) $(addprefix $(srcdir)/, $(LIBPL))
		mkdir -p $(DESTDIR)$(SOLIBDIR)
		rm -f $(DESTDIR)$(SOLIBDIR)/http_chunked.@SO@
		$(INSTALL_PROGRAM) $(SOLIBS) $(SOLIBDIR)
		mkdir -p $(DESTDIR)$(HTTPDIR)
		mkdir -p $(DESTDIR)$(HTTPDIR)/web/icons
		mkdir -p $(DESTDIR)$(HTTPDIR)/web/css
		(cd $(srcdir) && $(INSTALL_DATA) $(LIBPL) $(DESTDIR)$(HTTPDIR))
		(cd $(srcdir) && $(INSTALL_DATA) README $(DESTDIR)$(HTTPDIR))
		(cd $(srcdir) && $(INSTALL_DATA) web/icons/*.png $(DESTDIR)$(HTTPDIR)/web/icons)
		(cd $(srcdir) && $(INSTALL_DATA) web/css/*.css $(DESTDIR)$(HTTPDIR)/web/css)
		(cd $(srcdir) && $(PL) -f none -g true -t "make_library_index('$(DESTDIR)$(LIBDIR)')" )
		(cd $(srcdir) && $(PL) -f none -g make -t halt )

ln-install:	$(LIBPL)
		$(MAKE) INSTALL_DATA="../ln-install" INSTALL_PROGRAM="../ln-install" install

rpm-install:	install

pdf-install:	install-examples
		$(INSTALL_DATA) $(DOC).pdf $(DESTDIR)$(PKGDOCDIR)

html-install:	install-examples
		$(INSTALL_DATA) $(DOC).html $(srcdir)/httpserver.gif $(DESTDIR)$(PKGDOC)

install-examples::
		mkdir -p $(DESTDIR)$(EXDIR)
		mkdir -p $(DESTDIR)$(EXDIR)/pwp
		(cd $(srcdir)/examples && $(INSTALL_DATA) $(EXAMPLES) $(DESTDIR)$(EXDIR))
		(cd $(srcdir)/examples/pwp && $(INSTALL_DATA) *.pwp *.pl $(DESTDIR)$(EXDIR)/pwp)
		(cd $(srcdir)/examples && $(INSTALL_PROGRAM) $(EXAMPLEEXE) $(DESTDIR)$(EXDIR))

uninstall::
		(cd $(LIBDIR) && rm -f $(LIBPL))
		$(PL) -f none -g make -t halt

check::
		(cd $(srcdir) && $(PL) -q -f test_http.pl -g test_http,halt -t 'halt(1)' )
		(cd $(srcdir) && $(PL) -q -f test_json.pl -g test_json,halt -t 'halt(1)' )
		(cd $(srcdir) && $(PL) -q -f test_cgi_stream.pl -g true -t test_cgi_stream )

################################################################
# Documentation
################################################################

SUBTEX=		post.tex json.tex httplog.tex httppath.tex htmlhead.tex \
		httpsession.tex httpdispatch.tex httpdirindex.tex httppwp.tex \
		httpopen.tex httphost.tex httpopenid.tex jswrite.tex

json.tex:	json.pl json_convert.pl http_json.pl

.txt.tex:
		$(PUBLICPL) -q -s txttotex.pl -g txttotex,halt -t 'halt(1)' -- $*.txt

httplog.tex:	http_log.pl
		$(PLTOTEX) --subsection 'library(http/http_log)'

httphost.tex:	http_host.pl
		$(PLTOTEX) --subsection 'library(http/http_host)'

httppath.tex:	http_path.pl
		$(PLTOTEX) --subsection 'library(http/http_path)'

httpopen.tex:	http_open.pl
		$(PLTOTEX) --subsection 'library(http/http_open)'

htmlhead.tex:	html_head.pl
		$(PLTOTEX) --subsection 'library(http/html_head)'

httpsession.tex: http_session.pl
		$(PLTOTEX) --subsection 'library(http/http_session)'

httpdispatch.tex: http_dispatch.pl
		$(PLTOTEX) --subsection 'library(http/http_dispatch)'

httpopenid.tex:	http_openid.pl
		$(PLTOTEX) --subsection 'library(http/http_openid)'

httpdirindex.tex: http_dirindex.pl
		$(PLTOTEX) --subsection 'library(http/http_dirindex)'

httppwp.tex:	http_pwp.pl
		$(PLTOTEX) --subsection 'library(http/http_pwp)'

jswrite.tex:	js_write.pl
		$(PLTOTEX) --subsection 'library(http/js_write)'

################################################################
# Clean
################################################################

clean:
		rm -f $(STREAMOBJ) $(JSONOBJ)
		rm -f *~ *% config.log
		rm -f $(TEX) $(SUBTEX)
		$(RUNTEX) --clean $(DOC)
		rm -rf html

distclean:	clean
		rm -f $(SOLIBS) config.cache config.status config.h Makefile
